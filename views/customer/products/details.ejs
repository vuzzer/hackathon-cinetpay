        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-3 mb-1">
      
              <h3 class="text-center font-weight-bold mt-4 mb-0" >
                  Details du produit
              </h3>
              <!-- description produit container-->
              <div class="description-produit-container p-4">
                 
                  <div class="row">
                      <div class="col-md-3">
                          <img src="<%= product.thumbnail %>" alt="<%= product.title %>"  class="img-fluid"/>
                      </div>
                      <div class="col-md-9 description-details">
                          <h4 class="title-produit">
                            <%= product.title %>
                          </h4>
                          <div class="text-description">
                              <p>
                              <%= product.description %>
                              </p>
                          
                          </div>
                              
                          <div class="autre-informations">
                              <p class="card-text prix-produit">
                                  <%= product.price %> F CFA
                              </p>
                              <p class="card-text icons-stars">
      
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
      
                              </p>
      
                              <div class="article-restant">
                                  <p>
                                      Nombre d'articles restants : 
                                      <span class="font-weight-bolder" >
                                        <%= product.stock %>
                                      </span>
                                  </p>
                              </div>
                          </div>
      
                          <div class="btn-description-container mx-auto">
                              <a class="btn btn-add-produit-cart" id="add-to-cart" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">
                                  <i class="fas fa-shopping-cart me-2"></i>
                                  Ajouter aux paniers
                              </a>
                          </div>
      
                      </div>
                  </div>
      
                  
        
              </div>
              <!-- fin description produit container-->
      
      
      
            </div>
          </section>
       
